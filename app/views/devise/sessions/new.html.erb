<div class="containerLogin">
  <h2 class="containerLogin__header">
    Log In
  </h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:'containerLogin__form login-form' }) do |f| %>

      <div class="login-form__icon form-group-icon">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: ' formCust form-group-icon__input'  %>
      </div>


      <div class="login-form__password form-group-icon">
      <%= f.password_field :password, autocomplete: "off", placeholder:"Password", class:' formCust form-group-icon__input' %>

    </div>


      <div class="login-form__remember-me">
        <% if devise_mapping.rememberable? %>
          <div class="login-form__checkbox">

         </div>
        <% end %>
        <span class="login-form__forget-password">

        </span>
      </div>

      <%= f.submit "Log in", class: "button " %>

  <% end %>
   <div class="containerLogin__sign-up">
     <span>Don't have an account? &nbsp;&nbsp;</span><%= link_to "Sign up", new_user_registration_path %>
   </div>


</div>
