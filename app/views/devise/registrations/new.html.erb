<div class="containerLogin">
  <h2 class="containerLogin__header">
    Sign Up
  </h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: { class:'containerLogin__form login-form' } ) do |f| %>


      <div class="login-form__icon form-group-icon">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: 'formCust form-group-icon__input'  %>

      </div>


      <div class="login-form__password form-group-icon">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class:' formCust form-group-icon__input'  %>

    </div>

    <div class="login-form__password form-group-icon">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class:' formCust form-group-icon__input' %>

  </div>


      <%= f.submit "Log in", class: "button " %>

   <hr class="custom-or">

  <% end %>
   <div class="containerLogin__sign-up">
     <span>Already have an account? &nbsp;&nbsp;</span><%= link_to "Log in", new_user_session_path %>
   </div>


</div>
